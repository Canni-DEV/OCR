{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Workers": {
    "AcquireTimeoutSeconds": 120,
    "Endpoints": [
      "http://localhost:50051"
    ],
    "MaxAttempts": 3
  },
  "TempStorage": {
    "Root": "./temp"
  },
  "Azure": {
    "Endpoint": "https://example.cognitiveservices.azure.com/vision/v3.2/read/analyze",
    "ApiKey": "YOUR_KEY",
    "TimeoutSeconds": 30,
    "RetryCount": 3,
    "ResetDay": 1,
    "HardLimit": 50000
  },
  "Db": {
    "ConnectionString": "Server=.;Database=ocr;User Id=ocr;Password=Pass@word1;TrustServerCertificate=True;"
  },
  "Ocr": {
    "DefaultLanguage": "es"
  },
  "RateLimit": {
    "Enabled": false,
    "PermitLimit": 60,
    "WindowSeconds": 60
  }
}
